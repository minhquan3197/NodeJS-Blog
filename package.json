    "scripts": {
        "start": "tsc-watch --onSuccess \"node ./dist/index.js\"",
        "build": "npm run lint && webpack --mode=production && node release/bundle.js",
        "lint": "eslint \"./src/**/*.ts\" --fix",
        "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles",
        "test:loadtest": "loadtest -n 1000 -c 100 --rps 200 http://localhost:3000?number=20",
        "test:artillery": "artillery quick --count 10 -n 20 http://localhost:3000?number=20",
        "test:watch": "cross-env NODE_ENV=test jest --watchAll --runInBand --detectOpenHandles",
        "test:single": "cross-env NODE_ENV=test jest blogs/list_blog.spec.ts --watchAll --runInBand --detectOpenHandles"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
