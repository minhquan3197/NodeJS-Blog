        "@types/lodash": "^4.14.150",
        "@types/mongoose": "^5.7.7",
        "@types/morgan": "^1.9.0",
        "@types/node": "^13.9.2",
        "@types/supertest": "^2.0.8",
        "@types/validator": "^13.0.0",
        "@typescript-eslint/eslint-plugin": "^2.29.0",
        "@typescript-eslint/parser": "^2.29.0",
        "artillery": "^1.6.0",
        "concurrently": "^5.1.0",
        "eslint": "^6.8.0",
