        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "helmet": "^3.21.3",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.15",
        "mongoose": "^5.9.5",
        "morgan": "^1.10.0",
        "pm2": "^4.4.0",
        "validator": "^13.0.0"
    },
    "devDependencies": {
